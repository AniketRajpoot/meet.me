<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        xmlns:viewmodels="clr-namespace:Client.ViewModels"
        xmlns:views="clr-namespace:Client.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="950">
    <Window.Resources>
        <DataTemplate x:Name="ScreenShareTemplate" DataType="{x:Type viewmodels:ScreenShareViewModel}">
            <views:ScreenShare DataContext="{Binding}"/>
        </DataTemplate>
        <DataTemplate x:Name="WhiteboardTemplate" DataType="{x:Type viewmodels:WhiteboardViewModel}">
            <views:Whiteboard DataContext="{Binding}"/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="5"/>
            <RowDefinition/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="5"/>
        </Grid.RowDefinitions>

        <DockPanel Background="Aqua" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5"/>
        <DockPanel Background="Wheat" Grid.Row="2" Grid.Column="0" Grid.RowSpan="4">
        </DockPanel>
        <DockPanel Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3" Width="220">
            <Button Content="Whiteboard" Width="50" Margin="2.5 0" Click="Whiteboard_Clicked"/>
            <Button Content="ScreenShare" Width="50" Margin="2.5 0" Click="ScreenShare_Clicked"/>
            <Button Content="Chat" Margin="2.5 0" Width="50"/>
            <Button Content="Summary" Margin="2.5 0" Width="50" />
        </DockPanel>
        <DockPanel Background="Orange" Grid.Row="2" Grid.Column="4" Grid.RowSpan="4"></DockPanel>

        <ContentControl Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="1" Grid.RowSpan="1" Content="{Binding}"/>
    </Grid>
</Window>
