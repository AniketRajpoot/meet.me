<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="{x:Static SystemParameters.PrimaryScreenHeight}" Width="{x:Static SystemParameters.PrimaryScreenWidth}">

    <Window.Resources>
        <!--<DataTemplate x:Name="ScreenShareTemplate" DataType="{x:Type viewmodels:ScreenShareViewModel}">
            <local:ScreenShareView DataContext="{Binding}"/>
        </DataTemplate>
        <DataTemplate x:Name="WhiteboardTemplate" DataType="{x:Type viewmodels:WhiteboardViewModel}">
            <local:WhiteBoardView DataContext="{Binding}"/>
        </DataTemplate> 
        <DataTemplate x:Name="ChatTemplate" DataType="{x:Type viewmodels:ChatViewModel}">
            <local:ChatView DataContext="{Binding }"/>
        </DataTemplate>  -->

    </Window.Resources>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="0.1*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="0.1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="65*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="687*"/>
            <RowDefinition Height="0.75"/>
            <RowDefinition Height="82*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>
        
        <DockPanel Background="{StaticResource LightGrayBg}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="7">
            <TextBlock Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Text="meet.me" FontSize="40" FontWeight="Bold" FontFamily="ComicSans"/>
        </DockPanel>
<!--added-->
        
        <!--added-->
        
       <!-- 
        <DockPanel Name="UsersListPane1" Background="Wheat" Grid.Row="1" Grid.Column="0" Grid.RowSpan="5" Visibility="Visible" />
        <DockPanel Name="UsersListPane2" Background="Wheat" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="5" Visibility="Collapsed" />
        <Button Grid.Row="1" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Width="44" Height="32" FontSize="16" FontFamily="ComicSans" VerticalAlignment="Top" Background="White" Click="Users_List_Clicked" Margin="0,5,0,0" Grid.RowSpan="2">Users</Button>
-->
        <DockPanel Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="3" HorizontalAlignment="Center">
            <!--<Button Content="Whiteboard" Margin="2.5 0" Click="Whiteboard_Clicked" Style="{DynamicResource RoundedButton}"/>
            <Button Content="ScreenShare" Margin="2.5 0" Click="ScreenShare_Clicked" Style="{DynamicResource RoundedButton}"/>
            <Button Content="Dashboard" Margin="2.5 0" Click="Dashboard_Clicked" Style="{DynamicResource RoundedButton}"/>
            <Button Content="Chat" Margin="2.5 0" Click="Chat_Button_Clicked" Style="{DynamicResource RoundedButton}"/>
        -->
            <Border Width="60" Height="60" BorderBrush="Purple" BorderThickness="1" CornerRadius="50">
                <Button x:Name="Whiteboard" Click="Whiteboard_Clicked" ToolTip="WhiteBoard" BorderThickness="0" Background="White" Width="40" Height="40">
                    <Image  Source="/Icons/MainWindow/icons8-whiteboard-150.png"/>
                </Button>
            </Border>
            <Border Width="60" Height="60" BorderBrush="Purple" BorderThickness="1" CornerRadius="50" Margin="5 0 5 0">
                <Button x:Name="Screenshare" Click="ScreenShare_Clicked" ToolTip="ScreenShare"  BorderThickness="0" Background="White" Width="40" Height="40" >
                    <Image Source="/Icons/MainWindow/icons8-present-to-all-50.png"/>
                </Button>
            </Border>
            <Border Width="60" Height="60" BorderBrush="Purple" BorderThickness="1" CornerRadius="50" Margin="0 0 5 0">
                <Button x:Name="ChatButton" Click="Chat_Button_Clicked" ToolTip="Chat" Width="40" Height="40" BorderThickness="0" Background="White" >
                <Image Source="/Icons/MainWindow/icons8-chat-96.png"/>
            </Button>
            </Border>
            <Border Width="60" Height="60" BorderBrush="Purple" BorderThickness="1" CornerRadius="50" Margin="0 0 5 0">
                <Button x:Name="Dashboard" Click="Dashboard_Clicked" ToolTip="Dashboard" Width="40" Height="40" BorderThickness="0" Background="White" >
                    <Image Source="/Icons/Mainwindow/icons8-dashboard-60.png"/>
                </Button>
            </Border>
            <Border Width="60" Height="60" BorderBrush="Purple" BorderThickness="1" CornerRadius="50" Background="Purple">
                <Button x:Name="Leave" Click="OnLeaveButtonClick" ToolTip="Leave" Width="40" Height="40" BorderThickness="0" Background="Purple" >
                    <Image Source="/Icons/Mainwindow/icons8-end-call-96.png"/>
                </Button>
            </Border>
        </DockPanel>

        <ContentControl Name="UsersListControl" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="4"/>
        <!--<DockPanel Name="ChatPane" Background="DarkRed" Grid.Row="1" Grid.Column="6" Grid.RowSpan="5" Visibility="Collapsed" />
     <Button Name="ChatButton" Grid.Row="4" Grid.Column="6" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Width="38" Height="32" FontSize="16" VerticalAlignment="Top" Background="White" Click="Chat_Button_Clicked" Margin="0,50,0,0">Chat</Button>-->
        <ContentControl Name="SSwb" Grid.Row="2" Grid.Column="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

        <!--<ContentControl Name="SSwb" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="6" Grid.RowSpan="2" Content="{Binding}" Margin="1,5,0,0"/>
        -->
        <ContentControl Name="Chat" Grid.Row="2" Grid.Column="5" Grid.RowSpan="4" Visibility="Collapsed"/>
        

    </Grid>

</Window>
