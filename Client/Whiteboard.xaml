<Window x:Class="Client.WhiteBoardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800"
        WindowStyle="None"
        Background="#3D2C8D"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Name="MainBar" Background="#1C0C5B" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button Content="Undo" 
                    Grid.Column="0" 
                    Foreground="LightGray"
                    FontSize="10"
                    FontWeight="light"
                    Margin="0 2.5 0 2.5">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#EC407A"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value= "#E91E63"></Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>

                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="45"
                                Height="20"
                                CornerRadius="10"
                                Background="{TemplateBinding Background}">

                                <ContentPresenter VerticalAlignment="Center" 
                                        HorizontalAlignment="Center"/>
                            </Border>


                        </ControlTemplate>
                    </Button.Template>

                </Button>

                <Button Content="Redo" 
                    Grid.Column="1" 
                    Foreground="LightGray"
                    FontSize="10"
                    FontWeight="light"
                    Margin="0 2.5 0 2.5">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#EC407A"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E91E63"></Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>

                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="45"
                                Height="20"
                                CornerRadius="10"
                                Background="{TemplateBinding Background}">

                                <ContentPresenter VerticalAlignment="Center" 
                                        HorizontalAlignment="Center"/>
                            </Border>


                        </ControlTemplate>
                    </Button.Template>

                </Button>
            </Grid>



            <Button Content="Set Background" 
                    Grid.Column="1" 
                    Foreground="LightGray"
                    FontSize="10"
                    FontWeight="light"
                    Margin="0 2.5 0 2.5"
                    MouseDown = "ClickedSetBG" >

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="{Binding MainBar.Background}"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value= "{Binding MainBar.Background}"></Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>

                </Button.Style>

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="85"
                                Height="20"
                                CornerRadius="10"
                                Background="{TemplateBinding Background}">

                            <ContentPresenter VerticalAlignment="Center" 
                                        HorizontalAlignment="Center"/>
                        </Border>


                    </ControlTemplate>
                </Button.Template>

            </Button>

            <Button Content="Clear Canvas" 
                    Grid.Column="2" 
                    Foreground="LightGray"
                    FontSize="10"
                    FontWeight="light"
                    Margin="0 2.5 0 2.5"
                    MouseDown="ClickedClearFrame">

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="{Binding Mainbar.Background}"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value= "{Binding Mainbar.Background}"></Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>

                </Button.Style>

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="85"
                                Height="20"
                                CornerRadius="10"
                                Background="{TemplateBinding Background}">

                            <ContentPresenter VerticalAlignment="Center" 
                                        HorizontalAlignment="Center"/>
                        </Border>


                    </ControlTemplate>
                </Button.Template>

            </Button>

            <TextBlock Text="Toggle State"
                Foreground="LightGray"
                Grid.Column="3"
                VerticalAlignment="Center"
                HorizontalAlignment="Left" Grid.ColumnSpan="2" Margin="114,0,0,0"
             >

            </TextBlock>

            <local:ToggleButton x:Name="Bu" HorizontalAlignment="Left" Height="22" VerticalAlignment="Center" Width="44" RenderTransformOrigin="0.5,0.5" Grid.Column="4" Margin="70,0,0,0" Cursor="Hand" MouseLeftButtonDown="Bu_MouseLeftButtonDown">
                <local:ToggleButton.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="-1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>

                </local:ToggleButton.RenderTransform>

            </local:ToggleButton>


            <Button Content="Save Frame" 
                    Grid.Column="6" 
                    Foreground="White"
                    FontSize="10"
                    FontWeight="light"
                    Margin="0 2.5 0 2.5"
                    MouseLeftButtonDown="ClickedSaveFrame">

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#EC407A"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E91E63"></Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>

                </Button.Style>

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="80"
                                Height="20"
                                CornerRadius="10"
                                Background="{TemplateBinding Background}">

                            <ContentPresenter VerticalAlignment="Center" 
                                        HorizontalAlignment="Center"/>
                        </Border>


                    </ControlTemplate>
                </Button.Template>

            </Button>
        </Grid>

        <StackPanel Grid.Row="1" Grid.Column="0">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />

                </Grid.ColumnDefinitions>

                <Grid Grid.Column="1">
                    <Border Width="30" Height="300" Background="#EC407A" Margin="2,63,1,27" CornerRadius="15">

                    </Border>
                    <Image Width="20" Height="25" Margin="0 0 0 160" Source="/Icons/WhiteboardUX/Toolbar/selectTool.png" Cursor="Hand" MouseDown="ClickedSelectTool" />
                    <Image Width="20" Height="25" Margin="0 0 0 60" Source="/Icons/WhiteboardUX/Toolbar/drawRectangle.png" Cursor="Hand" MouseDown="ClickedRectTool"/>
                    <Image Width="20" Height="25" Margin="0 0 0 -40" Source="/Icons/WhiteboardUX/Toolbar/drawEllipse.png" Cursor="Hand" MouseDown="ClickedEllTool"/>
                    <Image Width="20" Height="25" Margin="0 0 0 -140" Source="/Icons/WhiteboardUX/Toolbar/Pen.png" Cursor="Hand" MouseDown="ClickedFreehandTool"/>
                    <Image Width="20" Height="25" Margin="0 0 0 -240" Source="/Icons/WhiteboardUX/Toolbar/Eraser.png" Cursor="Hand" MouseDown="ClickedEraserTool"/>

                </Grid>
            </Grid>


        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1">
            <Canvas Name="MyCanvas" MouseDown="OnCanvasMouseButtonDown" MouseUp="OnCanvasMouseButtonUp" Margin="0,10,0,10" Background="#C5CAE9" Height="400" Width="580" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Canvas.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Canvas.RenderTransform>
            </Canvas>
        </StackPanel>

    </Grid>

</Window>
